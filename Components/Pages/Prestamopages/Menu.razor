@page "/menu"
@inject NavigationManager navigationManager
@rendermode InteractiveServer
<div style="background: linear-gradient(135deg, #1A2E5B, #0C3E9F); width: 100%; height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div style="background-color: white; width: 90%; height: 90vh; padding: 50px; border-radius: 20px; box-shadow: 0px 30px 60px rgba(0,0,0,0.3); text-align: center; position: relative; overflow: hidden;">
        <h1 style="color: #0C3E9F; margin-bottom: 50px; font-size: 55px; font-weight: 700;">Menú Principal</h1>

        <div class="menu-items" style="display: flex; justify-content: space-around; flex-wrap: wrap; gap: 30px;">
            <div class="menu-item" style="flex: 1; min-width: 200px; max-width: 220px;">
                <button @onclick="NavigateToClients" style="width: 100%; padding: 30px; background-color: #0C3E9F; color: white; border: none; border-radius: 15px; display: flex; flex-direction: column; align-items: center; box-shadow: 0px 10px 25px rgba(0,0,0,0.3); transition: transform 0.3s;">
                    <img src="/Cliente.png" alt="Clientes" style="width: 70px; height: 70px; margin-bottom: 15px;" />
                    <span style="font-size: 20px; font-weight: bold;">Clientes</span>
                </button>
            </div>

            <div class="menu-item" style="flex: 1; min-width: 200px; max-width: 220px;">
                <button @onclick="NavigateToRegistrarPrestamo" style="width: 100%; padding: 30px; background-color: #0C3E9F; color: white; border: none; border-radius: 15px; display: flex; flex-direction: column; align-items: center; box-shadow: 0px 10px 25px rgba(0,0,0,0.3); transition: transform 0.3s;">
                    <img src="/Prestamo.png" alt="Registrar Préstamo" style="width: 70px; height: 70px; margin-bottom: 15px;" />
                    <span style="font-size: 20px; font-weight: bold;">Registrar Préstamo</span>
                </button>
            </div>

            <div class="menu-item" style="flex: 1; min-width: 200px; max-width: 220px;">
                <button @onclick="NavigateToRegistrarCobro" style="width: 100%; padding: 30px; background-color: #0C3E9F; color: white; border: none; border-radius: 15px; display: flex; flex-direction: column; align-items: center; box-shadow: 0px 10px 25px rgba(0,0,0,0.3); transition: transform 0.3s;">
                    <img src="/Cobro.png" alt="Registrar Cobro" style="width: 70px; height: 70px; margin-bottom: 15px;" />
                    <span style="font-size: 20px; font-weight: bold;">Registrar Cobro</span>
                </button>
            </div>

            <div class="menu-item" style="flex: 1; min-width: 200px; max-width: 220px;">
                <button @onclick="NavigateToHistorialPrestamo" style="width: 100%; padding: 30px; background-color: #0C3E9F; color: white; border: none; border-radius: 15px; display: flex; flex-direction: column; align-items: center; box-shadow: 0px 10px 25px rgba(0,0,0,0.3); transition: transform 0.3s;">
                    <img src="/Historial prestamo.png" alt="Historial Préstamo" style="width: 70px; height: 70px; margin-bottom: 15px;" />
                    <span style="font-size: 20px; font-weight: bold;">Historial Préstamo</span>
                </button>
            </div>

            <div class="menu-item" style="flex: 1; min-width: 200px; max-width: 220px;">
                <button @onclick="NavigateToVisionGeneral" style="width: 100%; padding: 30px; background-color: #0C3E9F; color: white; border: none; border-radius: 15px; display: flex; flex-direction: column; align-items: center; box-shadow: 0px 10px 25px rgba(0,0,0,0.3); transition: transform 0.3s;">
                    <img src="/Vision General.png" alt="Visión General" style="width: 70px; height: 70px; margin-bottom: 15px;" />
                    <span style="font-size: 20px; font-weight: bold;">Visión General</span>
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToClients()
    {
        navigationManager.NavigateTo("/Index/Clientes");
    }

    private void NavigateToRegistrarPrestamo()
    {
        navigationManager.NavigateTo("/registrar-prestamo");
    }

    private void NavigateToRegistrarCobro()
    {
        navigationManager.NavigateTo("/registrar-cobro");
    }

    private void NavigateToHistorialPrestamo()
    {
        navigationManager.NavigateTo("/historial-prestamo");
    }

    private void NavigateToVisionGeneral()
    {
        navigationManager.NavigateTo("/vision-general");
    }
}
