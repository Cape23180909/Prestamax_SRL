@page "/menu"
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<div style="background: linear-gradient(135deg, #1A2E5B, #0C3E9F); width: 100%; height: 100vh; display: flex; justify-content: center; align-items: center;">
    <div style="background-color: #f7f9fc; width: 85%; height: 90vh; padding: 40px; border-radius: 20px; box-shadow: 0px 20px 40px rgba(0,0,0,0.2); text-align: center; position: relative; overflow: hidden;">
        <h1 style="color: #0C3E9F; margin-bottom: 50px; font-size: 48px; font-weight: 700; text-shadow: 1px 1px 4px rgba(0,0,0,0.1);">Menú Principal</h1>

        <div class="menu-items" style="display: flex; justify-content: space-around; flex-wrap: wrap; gap: 30px;">
            <div class="menu-item">
                <button @onclick="NavigateToClients" class="menu-button">
                    <div class="img-container">
                        <img src="/Cliente.png" alt="Clientes" />
                    </div>
                    <span>Clientes</span>
                </button>
            </div>

            <div class="menu-item">
                <button @onclick="NavigateToRegistrarPrestamo" class="menu-button">
                    <div class="img-container">
                        <img src="/Prestamo.png" alt="Registrar Préstamo" />
                    </div>
                    <span>Registrar Préstamo</span>
                </button>
            </div>

            <div class="menu-item">
                <button @onclick="NavigateToRegistrarCobro" class="menu-button">
                    <div class="img-container">
                        <img src="/Cobro.png" alt="Registrar Cobro" />
                    </div>
                    <span>Registrar Cobro</span>
                </button>
            </div>

            <div class="menu-item">
                <button @onclick="NavigateToHistorialPrestamo" class="menu-button">
                    <div class="img-container">
                        <img src="/Historial prestamo.png" alt="Historial Préstamo" />
                    </div>
                    <span>Historial Préstamo</span>
                </button>
            </div>

            <div class="menu-item">
                <button @onclick="NavigateToVisionGeneral" class="menu-button">
                    <div class="img-container">
                        <img src="/Vision General.png" alt="Visión General" />
                    </div>
                    <span>Visión General</span>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .menu-button {
        width: 100%;
        padding: 25px;
        background-color: #0C3E9F;
        color: white;
        border: none;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, background-color 0.3s ease;
        cursor: pointer;
    }

        .menu-button:hover {
            transform: scale(1.05);
            background-color: #1453B4;
        }

    .img-container {
        width: 80px;
        height: 80px;
        overflow: hidden;
        margin-bottom: 15px;
        border-radius: 50%;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

        .img-container img {
            width: 100%;
            height: 100%;
            transition: transform 0.4s ease;
            object-fit: cover;
            border-radius: 50%;
        }

            .img-container img:hover {
                transform: scale(1.15);
            }

    .menu-button span {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
        text-transform: uppercase;
        color: #f0f4fa;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    .menu-item {
        flex: 1;
        min-width: 200px;
        max-width: 220px;
    }
</style>

@code {
    private void NavigateToClients()
    {
        navigationManager.NavigateTo("/Cliente/Index");
    }

    private void NavigateToRegistrarPrestamo()
    {
        navigationManager.NavigateTo("/registrar-prestamo");
    }

    private void NavigateToRegistrarCobro()
    {
        navigationManager.NavigateTo("/registrar-cobro");
    }

    private void NavigateToHistorialPrestamo()
    {
        navigationManager.NavigateTo("/historial-prestamo");
    }

    private void NavigateToVisionGeneral()
    {
        navigationManager.NavigateTo("/vision-general");
    }
}